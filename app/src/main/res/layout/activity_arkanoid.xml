<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <!-- Botón de retroceso en la esquina superior izquierda -->
        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/green2"
            android:contentDescription="Botón para volver atrás"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@id/button_back"
            android:layout_marginTop="40dp">

            <!-- Título del juego -->
            <TextView
                android:id="@+id/game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ARKANOID GAME"
                android:textSize="32sp"
                android:textColor="@color/green2"
                android:textStyle="bold"
                android:layout_marginBottom="26dp"/>

            <!-- Contenedor para puntaje y cronómetro en la misma línea -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <!-- Texto para mostrar la puntuación alineado a la izquierda -->
                <TextView
                    android:id="@+id/score_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: 0"
                    android:textSize="20sp"
                    android:textColor="@color/green2"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"/>

                <!-- Cronómetro para mostrar el tiempo alineado a la derecha -->
                <Chronometer
                    android:id="@+id/chronometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/green2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <!-- FrameLayout para el área de juego -->
            <FrameLayout
                android:id="@+id/game_area"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_margin="16dp"
                android:background="@color/black"
                android:elevation="4dp">

                <!-- Contenedor para las vidas en la esquina inferior izquierda -->
                <LinearLayout
                    android:id="@+id/lives_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
