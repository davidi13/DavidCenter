<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="@color/purple_200"
        android:contentDescription="Botón para volver atrás"
        android:src="@drawable/baseline_arrow_back_ios_24" />

    <!-- ScrollView envuelve el LinearLayout principal -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/back_button">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIGHTS OUTSIDE"
                android:textSize="32sp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <GridLayout
                android:id="@+id/grid_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="5"
                android:columnCount="5"
                android:background="@android:color/transparent"
                android:visibility="visible">

                <!-- Aquí se agregarán las casillas programáticamente -->
            </GridLayout>

            <TextView
                android:id="@+id/round_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rounds: 0"
                android:textSize="20sp"
                android:textColor="@color/purple_200"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:padding="10dp"
                android:textSize="18sp"
                android:background="@drawable/rounded_button_background"
                android:backgroundTint="@color/purple_200"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
